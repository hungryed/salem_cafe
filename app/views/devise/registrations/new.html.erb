<div class="small-12 medium-6 small-centered columns">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
      <%= f.input :last_name,label: 'Last Name', required: true %>
      <%= f.input :email, required: true %>
      <%= f.input :phone_number, label: 'Phone Number' %>
      <%= f.input :receives_texts, label: 'Receive Text Notifications', as: :boolean %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation,label: 'Password Confirmation', required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign Up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
