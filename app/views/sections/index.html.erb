<% @sections.each do |section| %>
<div>
  <%= link_to section.name, section_path(section), id: "section_#{section.id}" %>
  <%= section.description %>
  <% if user_signed_in? %>
    <% if current_user.is_admin? %>
      <%= link_to 'Edit', edit_section_path(section) %>
    <% end %>
  <% end %>
</div>
<% end %>
