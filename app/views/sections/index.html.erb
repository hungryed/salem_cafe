<% @sections.each do |section| %>
  <%= link_to section_path(section), id: "section_#{section.id}" do %>
    <div class="small-12 large-6 small-centered columns">
      <div class="panel">
        <div class="row">
          <div class="small-6 small-left medium-4 medium-left columns">
            <h1><%= section.name %></h1>
          </div>
          <div class="small-6 small-right medium-7 medium-right columns">
            <h3><%= section.description %></h3>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
