<%= simple_form_for @section do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :start_time, label: 'Start Time', start_hour: 7, end_hour: 14, ampm: true, discard_minute: true %>
  <%= f.input :end_time, label: 'End Time', start_hour: 7, end_hour: 14, ampm: true, discard_minute: true %>
  <%= f.button :submit %>
<% end %>
