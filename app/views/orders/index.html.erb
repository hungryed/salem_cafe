<% if current_user.is_employee? %>
  <h3><%= @current_section.name %></h3>

  <% @orders.each do |order| %>
    <div class="full-order" section-order-id="<%= order.id %>">
      <div id="myModal<%= order.id %>" class="reveal-modal" data-reveal>
        <h1><%= order.food.name %></h1>
        <h3><%= order.user.first_name %>
        <%= order.user.last_name %></h3><br>
        <h4><%= link_to order.clean_arrival_time, section_order_path(@current_section, order) %></h4>
        <a class="close-reveal-modal">&#215;</a>
      </div>
<!-- include picture of person potentially -->
<!-- page to show completed orders -->
      <div class="order">
        <div class="row">
          <div class="small-12 medium-9 columns">
            <%= link_to '#',
              data: { :"reveal-id" => "myModal#{order.id}"} do %>
              <div class="small-3 small-left medium-4 medium-left columns">
                <h4><%= order.food.name %></h4>
                <p><%= [order.user.first_name, order.user.last_name].join(' ') %></p>
                <p><%= order.clean_arrival_time %></p>
              </div>
              <div class="small-4 small-centered medium-4 medium-centered columns">
                <%= image_tag order.food.picture_url(:thumb).to_s %>
              </div>
            <% end %>
          </div>

          <div class="small-12 medium-3 columns">
            <ul class="order-actions">
              <li>
                <%= form_for [order.user, order], url: user_order_path(order.user, order), method: :patch do |t| %>
                  <%= t.hidden_field :status, value: "in progress" %>
                  <%= t.submit "In Progress", class: "button alert expand" %>
                <% end %>
              </li>
              <li>
                <%= button_to "Completed", user_order_path(order.user, order,
                  params: {order: {status: "completed"}} ),
                  form: { class: 'order-complete-button' },
                  id: "completed_#{order.id}",
                  method: :patch,
                  class: "button success expand" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= will_paginate @orders %>
<% else %>
  <div class="small-12 small-centered medium-9 columns">
    <% if !@current_orders.empty? %>
      <h1>Current Orders</h1>
      <table class="custom-light-background">
        <tr>
          <th>Section</th>
          <th>Food Item</th>
          <th>Arrival Time</th>
          <th></th>
          <th></th>
        </tr>
        <% @current_orders.each do |order| %>
          <tr>
            <td><%= order.section.name %></td>
            <td><%= order.food.name %></td>
            <td><%= order.clean_arrival_time %></td>
            <td><%= link_to 'Edit Order', edit_user_order_path(current_user, order) %></td>
            <td><%= link_to 'Cancel Order', user_order_path(current_user, order), method: :delete %></td>
          </tr>
        <% end %>
      </table>
      <%= will_paginate @current_orders %>
    <% end %>
    <br>
    <h1>Previous Orders</h1>
    <table class="custom-light-background">
      <tr>
        <th>Section</th>
        <th>Food Item</th>
        <th>Arrival Time</th>
      </tr>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.section.name %></td>
            <td><%= order.food.name %></td>
            <td><%= order.clean_arrival_time %></td>
          </tr>
        <% end %>
    </table>
    <%= will_paginate @orders %>
  </div>
<% end %>
