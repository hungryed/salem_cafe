
<% if current_user.is_employee? %>
  <%= @current_section.name %>
  <% @orders.each do |order| %>
    <%= order.food.name %>
    <%= order.user.first_name %>
    <%= order.user.last_name %>
    <%= link_to order.arrival_time, section_order_path(@current_section, order) %>

    <%= form_for [order.user, order], url: user_order_path(order.user, order), method: :patch do |t| %>
      <%= t.hidden_field :status, value: "in progress" %>
      <%= t.submit "In Progress" %>
    <% end %>

    <%= form_for [order.user, order], url: user_order_path(order.user, order), method: :patch do |t| %>
      <%= t.hidden_field :status, value: "completed"%>
      <%= t.submit "Completed" %>
    <% end %>
    <br>
  <% end %>
<% else %>
  <% if !current_user.todays_order.nil? %>
    <%= current_user.todays_order.food.name %>
    <%= current_user.todays_order.arrival_time %>
    <%= link_to 'Edit Order', edit_user_order_path(current_user, current_user.todays_order) %>
    <%= link_to 'Cancel Order', user_order_path(current_user, current_user.todays_order), method: :delete %>
  <% end %>
  <br>
  <% @orders.each do |order| %>
    <%= order.food.name %>
    <%= order.arrival_time %>
    <br>
  <% end %>
<% end %>
