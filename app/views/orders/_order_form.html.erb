<%= simple_form_for [current_user, @order] do |f| %>
  <% if @order.errors.any? %>
    <% @order.errors.each do |name, error| %>
      <%= error %>
    <% end %>
  <% end %>

  <%= hidden_field_tag 'section_id' , section.id %>
  <%= f.input :food_id, labe: 'Food', collection: section.foods, label_method: :name %>

  <%= f.time_select :arrival_time, minute_step: 5, start_hour: 7 , end_hour: 13, ampm: true %>
  <%= f.button :submit %>
<% end %>
