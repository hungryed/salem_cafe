<% if @order.errors.any? %>
  <div data-alert class="alert-box warning round">
    <% @order.errors.each do |name, error| %>
      <%= error %>
    <% end %>
  </div>
<% end %>
<dl class="tabs" data-tab>
  <% @sections.each do |section| %>
    <dd><%= link_to section.name, "#section-#{section.id}" %></dd>
  <% end %>
</dl>
<div class="tabs-content">
  <% @sections.each do |section| %>
    <%= render 'order_form', section: section %>
  <% end %>
</div>
